mixin outputRating(rating)
  - for(var i = 1; i <= rating; i++)
    span.glyphicon.glyphicon-star
  - for(var i = rating; i < 5; i++)  
    span.glyphicon.glyphicon-star-empty

mixin formatDate(timeStamp)
  -
    var monthNames = ["January", "February", "March", 
                      "April", "May", "June", "July", "August",
                      "September", "October", "November",  "December"];
  - var date = new Date(timeStamp);
  - var day = date.getDate();
  - var month = monthNames[date.getMonth()];
  - var year = date.getFullYear();
  - var output = day + ' ' + month + ' ' + year;
  = output

mixin createCards()
  -
    var alwartha = { 
                      "العصبات": 
                      [
                        "ابن", "ابن ابن",
                        "أخ شقيق", "أخ ﻷب", "ابن أخ شقيق",
                        "ابن أخ ﻷب", "عم ﻷب", 
                        "عم شقيق", "ابن عم شقيق", "ابن عم ﻷب"
                      ], 
                      "أصحاب الفروض": 
                      [
                        "زوج", "زوجه", "أخت شقيقه", 
                        "أخت ﻷب","بنت", "بنت ابن", 
                        "أم", "أم أم", "أم ﻷب",
                        "إخوه ﻷم"
                      ],
                      "أصحاب فروض وعصبات": ["أب", "جد"]
                   };
  each people, cluster in alwartha 
        .card.mb-3.mt-3
            h5.card-header.text-center.arabic-content(
              style='background-color: #c7f6a894') #{cluster}  
            .card-body.arabic-content
              .row
                each person in people
                  .col-12.col-sm-6.col-lg-6
                    .input-group.mb-2
                      span.input-group-addon.addon-checkbox-right
                        input(aria-label='Checkbox for following text input', type='checkbox')             
                      span.input-group-addon #{person}            
                      input.form-control.addon-textarea-right(aria-label='Text input with checkbox', type='text')  

mixin displayResultTable(alwratha)
  table.table.table-hover
    thead.text-primary.bg-light
      tr
        th الوارث    
        th عدد اﻷفراد     
        th نصيب الفرد
    tbody
      each relative in alwratha
        tr
          th(scope='row') #{relative.relationship}      
          td #{relative.count}      
          td #{relative.fortune} 

mixin displayNavItems(items)
  nav.navbar.navbar-expand-sm.navbar-dark.bg-primary.arabic-content
    a.navbar-brand(href='/') الشاشه الرئيسيه       
    button.navbar-toggler.hidden-lg-up(type='button', data-toggle='collapse',
      data-target='#collapsibleNavId', aria-controls='collapsibleNavId', 
      aria-expanded='false', aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #collapsibleNavId.collapse.navbar-collapse
      ul.float-xs-right.navbar-nav.mt-2.mt-lg-0
        each item, index in items
          -if(index === 0)
            li.nav-item.active
              a.nav-link(href= item.url) #{item.name}
                span.sr-only (current)
          -else            
            li.nav-item
              a.nav-link(href= item.url) #{item.name}   
      
      